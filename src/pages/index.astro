<style>
  .about {
    padding: 6rem 0;
    background: var(--light-gray);
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .section-title {
    text-align: left;
    margin-bottom: 2rem;
  }

  .features {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .feature {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .feature-icon {
    font-size: 2rem;
    background: var(--primary-orange);
    color: white;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .feature h3 {
    margin: 0 0 0.5rem 0;
    color: var(--dark-gray);
    font-size: 1.2rem;
  }

  .feature p {
    margin: 0;
    color: var(--primary-gray);
    line-height: 1.6;
  }

  .about-image {
    position: relative;
  }

  .about-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .section-title {
      text-align: center;
    }
    
    .feature {
      text-align: center;
      flex-direction: column;
    }
  }
</style>